{
    "tasks": [{
        "type": "shell",
        "label": "C/C++: g++-8 build active file",
        "command": "/usr/bin/g++-8",
        "args": [
            "--std=c++17",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}.out"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }],
    "version": "2.0.0"
}