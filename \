#include <cstddef>
#include <string>
#include <cmath>
#include "gtest/gtest.h"

class Solution{
    public:
        size_t static getDistance(char x, char y){
            return std::abs(x-y);
        }
        int equalSubstring(std::string s, std::string t, int maxCost){
            auto size{s.size()};
            auto maxCount{0U};
            auto remainCost{maxCost};

            for(auto i{0U}, j{0U}; i <= j && j < size; ++i){
               auto currentDistance{getDistance(s[i], t[i])};
               if(currentDistance > remainCost){
                   remainCost += currentDistance;
                   ++i;
                   --maxCount;
               } else{
                   ++maxCount;
                   remainCost -= currentDistance;

               }
            }
        }
}
